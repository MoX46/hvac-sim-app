{
  "name": "hvac-math",
  "version": "0.0.1",
  "description": "A library for modeling loads and costs for heat pumps, furnaces, air conditioners etc.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "serve": "esbuild src/app/app.tsx --bundle --servedir=static --outdir=static/js"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts?$",
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/*.d.{ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/luxon": "3.4.2",
    "jest": "29.7.0",
    "ts-jest": "29.1.2"
  },
  "dependencies": {
    "@types/d3": "7.4.3",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "d3": "7.8.5",
    "esbuild": "0.20.0",
    "luxon": "3.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
